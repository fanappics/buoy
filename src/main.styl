$font-family = 'Open Sans', sans-serif

$cerulean = #00aaed
$cornflower-blue = #4D90FE
$night-rider = #333333
$thunder = #363436
$fedora = #6B686B
$mountain-mist = #A1A0A2
$silver = #C1C1C1
$pale-slate = #c4c3c4
$venetian-red = #D0021B
$quartz = #DEDEDF
$athens-grey = #f5f6f8
$white = #FFFFFF

$text = $thunder
$placeholder = $mountain-mist
$error = $venetian-red
$focus = $cornflower-blue
$disabled-background = $white
$disabled-color = $night-rider

$button-background = $white
$button-border = $quartz

$input-background = $athens-grey
$input-shadow = $pale-slate
$input-focus = $cerulean
$input-placeholder = $fedora

body
  color $text
  font-size 85.7%
  font-family $font-family

.flex
  display flex

.column
  flex-direction column

input, .input, textarea, button
  font 400 1em $font-family 

button
  background-color $button-background
  border solid 1px $button-border
  border-radius 4px
  cursor pointer
  padding 0.857rem

button:not([disabled]):active
  border-style inset

input, textarea, .input
  background-color $input-background
  border 1px solid $input-background
  box-shadow inset 0 -2px 0 0 $input-shadow
  padding 0.75rem 0.9375rem

input:focus, .input:focus, textarea:focus
    box-shadow inset 0 -2px 0 0 $input-focus
    border solid 1px $input-focus
    border-bottom none
    outline none

input::-webkit-input-placeholder, .input::-webkit-input-placeholder
    color $input-placeholder

::placeholder, .placeholder
  color $placeholder

input::-webkit-inner-spin-button
  margin 0
  -webkit-appearance none

input[type=number]
  -moz-appearance textfield

label, .label
  display block
  font-weight 600
  padding-bottom 0.375rem

:focus, .focus
  outline $focus solid 2px

.error-border
  border solid 1px $error

.error-text
  color $error
  display inline-block
  font-size 85.7%
  padding-top 0.357rem

:disabled, .disabled
  background-color $disabled-background
  color $disabled-color
  cursor not-allowed
  opacity 0.4

li
  color $night-rider