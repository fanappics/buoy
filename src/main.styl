$font-family = 'Open Sans', sans-serif

$cornflower-blue = #4D90FE
$cerulean = #00aaed
$night-rider = #333333
$athens-grey = #f5f6f8
$pale-slate = #c4c3c4
$quartz = #DEDEDF
$silver = #C1C1C1
$mountain-mist = #A1A0A2
$venetian-red = #D0021B
$white = #FFFFFF

body
  font-size 85.7%
  font-family $font-family

button
  background-color $white
  border solid 1px $quartz
  border-radius 4px
  cursor pointer
  padding 0.857rem

button:not([disabled]):active
  border-style inset

input, textarea, .input
  background-color: $athens-grey
  border 1px solid $athens-grey
  box-shadow inset 0 -2px 0 0 $pale-slate
  color $night-rider
  font-size 1em
  padding 0.75rem 0.9375rem

input:focus, .input:focus, textarea:focus
    box-shadow inset 0 -2px 0 0 $cerulean
    border solid 1px $cerulean
    border-bottom none
    outline none

input::-webkit-input-placeholder, .input::-webkit-input-placeholder
    color $mountain-mist

input::-webkit-inner-spin-button
  margin 0
  -webkit-appearance none

input[type=number]
  -moz-appearance textfield

label, .label
  color $night-rider
  display block
  font-weight 600
  padding-bottom 0.375rem

:focus, .focus
  outline $cornflower-blue solid 2px

::placeholder, .placeholder
  color $silver

.error-border
  border solid 1px $venetian-red

.error-text
  color $venetian-red
  display inline-block
  font-size 85.7%
  padding-top 0.357rem

:disabled, .disabled
  background-color $white
  color $night-rider
  cursor not-allowed
  opacity 0.4

li
  color $night-rider