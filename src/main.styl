$font-family = 'Open Sans', sans-serif

$cornflower-blue = #4D90FE 
$night-rider = #333333
$quartz = #DEDEDF
$silver = #C1C1C1
$venetian-red = #D0021B
$white = #FFFFFF

body
  font-size 87.5%
  font-family $font-family

button
  background-color $white
  border solid 1px $quartz
  border-radius 4px
  cursor pointer
  padding 0.857rem

input, textarea, .input
  border solid 1px $quartz
  border-radius 4px
  color $night-rider
  padding 0.857rem
  
li
  color $night-rider

input::-webkit-inner-spin-button
  margin 0
  -webkit-appearance none

input[type=number]
  -moz-appearance textfield

label, .label
  color $night-rider
  display block
  font-weight 400
  padding-bottom 0.429rem

:focus, .focus
  box-shadow 0 0 2px 2px $cornflower-blue
  outline 0

::placeholder, .placeholder
  color $silver

.error-border
  border solid 1px $venetian-red

.error-text
  color $venetian-red
  display inline-block
  font-size 85.7%
  padding-top 0.357rem

:disabled, .disabled
  background-color $white
  color $night-rider
  cursor not-allowed
  opacity 0.4

button:not([disabled]):active
  border-style inset
